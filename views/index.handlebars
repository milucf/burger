<div class="row">
    <div class="col-sm-12 bgm">
        <div class="input-group">
            <input id="burger-name" type="text" class="form-control" placeholder="Name Of The Burger" name="txtsubmit">
            <div class="input-group-btn">
                <button id="burger-submit" class="btn btn-default" >submit</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 bgl">
        <h2>waiting to be devoured.</h2>
        <ul id="ulNotdevoured" class="list-group">
            {{#each burgers}} 
            {{#unless this.devoured}}
            <li class="list-group-item list-group-item-warning">
                {{this.burger_name}}
                <button type="button" data-burgerid="{{this.id}}" class="btn-default btn-devour">devour it!</button>
            </li>
            {{/unless}} {{/each}}
        </ul>
    </div>
    <div class="col-sm-6 bgr">
        <h2>devoured.</h2>
        <ul id="uldevoured" class="list-group">
            {{#each burgers}} 
            {{#if this.devoured}}
            <li class="list-group-item list-group-item-success">{{this.burger_name}}</li>
            {{/if}} {{/each}}
        </ul>
    </div>
</div>